<!DOCTYPE html>
<html>
<head>
	<title>ArduWeather</title>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="author" content="Ángel Martínez">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"> <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.13.0/css/all.css">
  <link href='https://api.mapbox.com/mapbox-gl-js/v1.8.1/mapbox-gl.css' rel='stylesheet' />
  <link rel="stylesheet" href="leaflet/leaflet.css" /> <!-- Version Leaflet 1.6.0 CSS en repositorio local -->
  <link rel="stylesheet" href="css/style.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script> <!-- jQuery library -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script> <!-- Latest compiled bootstrap -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script> <!-- Popper JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.js"></script> <!--Libreria Chart.js-->
  <script src='https://api.mapbox.com/mapbox-gl-js/v1.8.1/mapbox-gl.js'></script>
  <script src="leaflet/leaflet.js"></script> <!-- Version Leaflet 1.6.0 js en repositorio local --> 
  <script src="js/time.js"></script>
  <script src="js/application.js"></script>
  <script src="js/mapping.js"></script>
</head>
<body>
	<div class="wrapper">
    <div class="sidebar">
      <div class="sidebar-wrapper">
        <div class="logo text-center">
          <a href="/" class="">ArduWeather</a>				
        </div>
        <nav>
          <ul>
            <li id="dashLink" class="nav-item"><a href="/" title=""><i class="fa fa-table"></i><p>Dashboard</p></a></li>
            <li id="tempLink" class="nav-item"><a href="/temperature" title=""><i class="fa fa-thermometer-three-quarters"></i><p>Temperatura</p></a></li>
            <li id="humLink" class="nav-item"><a href="/humidity" title=""><i class="fa fa-tint"></i><p>Humedad</p></a></li>
            <li id="preasLink" class="nav-item"><a href="/pressure" title=""><i class="fa fa-heat"></i><p>Presion</p></a></li>
            <li id="brigLink" class="nav-item"><a href="/brightness" title=""><i class="fa fa-lightbulb"></i><p>Luminosidad</p></a></li>
            <li id="owLink" class="nav-item"><a href="/openweather" title=""><i class="fa fa-cloud-sun"></i><p>OpenWeatherMap</p></a></li>
            <li id="mapLink" class="nav-item"><a href="/mapping" title=""><i class="fa fa-map-marked-alt"></i><p>Mapas</p></a></li>
          </ul>
        </nav>
        <div class="container status text-center">
          <!--<div class="show-temp">
            <span class="temp-data">23</span><span class="units">ºC</span>
          </div> -->
          <div class="datetime">
            <i class="fa fa-calendar-alt"></i><span id="descDay">Lunes </span><span id="day">20 </span><span id="month">Abril </span>
          </div>
        </div>
        <div id="dig_clock">	
          <div id="dig_hours">00</div>
          <div class="dig_separator">:</div>
          <div id="dig_minutes">00</div>
          <div class="dig_separator">:</div>
          <div id="dig_seconds">00</div>
        </div>
      </div>		
    </div>
    <%- body %>
  </div>
</body>
</html>